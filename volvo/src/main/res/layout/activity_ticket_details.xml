<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!--Include Header -->
    <include layout="@layout/main_header"
        ></include>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="28dp"
        android:paddingBottom="50dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            >
            <!--Job ID-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/txt_ticket_id_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Id"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/txt_ticket_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp" />

            </LinearLayout>


            <!--Door Number-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/txt_door_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Door Number"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/txt_door_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Chasis Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chassis Number"
            android:textSize="12sp"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/txt_chasis_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            />



        <!-- Job Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Type"
            android:textSize="12sp"
            android:layout_marginTop="25dp"
            />

            <TextView
                android:id="@+id/txt_job_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                />

        <!--Job Remark-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Comments"
            android:textSize="12sp"
            android:layout_marginTop="25dp"
            />

        <EditText
            android:id="@+id/txt_job_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            />

        <!--Repaire Job Time-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Time"
            android:textSize="12sp"
            android:layout_marginTop="25dp"
            />

        <RelativeLayout
            android:id="@+id/edit_job_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:id="@+id/txt_job_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_action_edit"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>




    <TextView
        android:id="@+id/txt_reason_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delayed Reasons"
        android:textSize="13sp"
        android:layout_marginTop="25dp"
        android:visibility="gone"
        />

        <!--Reasons List-->
        <LinearLayout
            android:id="@+id/lay_linear_reasons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        </LinearLayout>



        <!--Button View-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:weightSum="2"
            >
            <com.teramatrix.vos.utils.CustomTextViewArial
                android:id="@+id/add_reason"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/volvo_blue"
                android:gravity="center"
                android:text="DELAYED REASON"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_marginRight="5dp"
                />

            <com.teramatrix.vos.utils.CustomTextViewArial
                android:id="@+id/close"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/volvo_green"
                android:gravity="center"
                android:text="WORK COMPLETED"
                android:textColor="#ffffff"
                android:textSize="14sp"

                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

        <com.teramatrix.vos.utils.CustomTextViewArial
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/et_border_dark"
            android:gravity="center"
            android:text="BACK"
            android:textColor="@color/volvo_blue"
            android:textSize="14sp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>

    </ScrollView>

</LinearLayout>
