<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >


    <TextView
        android:id="@+id/tv_reason"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="Parts not available"
        android:drawablePadding="0dp"
        android:drawableRight="@mipmap/ic_action_edit"
        />

    <TextView
        android:id="@+id/txt_reason_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="14 May   2018 11:25 - 14 May 2018 2018 12:25"
        android:textColor="@color/volvo_blue"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/txt_reason_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Air filter is not available in store. Have asked to banglore station to send it asap."
        android:textColor="#8c8c8c"
        android:textSize="13sp"
        />

</LinearLayout>

